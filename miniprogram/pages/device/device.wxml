<view class='flex bg-white'>
  <ec-canvas class='flex-twice' id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
</view>
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>
    滤芯使用情况
  </view>
</view>
<view class="padding bg-white">
  <view class='prog align-center' wx:for="{{filters}}" wx:key>
    <view class='prog-pos'>
      <button class="cu-btn icon bg-orange">
        <text>{{item.pos}}</text>
      </button>
      <view class="basis-df"></view>

      <text>{{item.name}}</text>
    </view>
    <view class='prog-bar margin-left'>
      <view class="cu-progress round">
        <view class="bg-pink" style="width:{{item.lifespan}}%;"></view>
      </view>
      <text class="margin-left">已使用：{{item.lifespan}}%；剩余：{{100-item.lifespan}}%。</text>
    </view>
  </view>
</view>
<view class='flex'>
  <button class="cu-btn flex-sub round bg-blue">设备充值</button>
  <button class="cu-btn flex-sub margin-left round bg-green">售后服务</button>
</view>