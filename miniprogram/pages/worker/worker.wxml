  <scroll-view wx:if="{{orders && orders.length>0 }}">
  	<view class="margin-sm bg-white radius" wx:for="{{orders}}">
  		<view class="cu-item shadow">
  			<view class='justify-between flex solids-bottom padding-lr padding-tb-sm'>
  				<view>{{item.type}}订单</view>
  				<view>
  					{{item.state}}
  				</view>
  			</view>
  			<view class='content bg-white padding text-cyan'>
  				<view>
  					<text class="text-bold">{{item.address.userName}}</text>
  					,{{item.address.telNumber}}
  				</view>
  				<view class='content'>
  					{{item.address.provinceName}} {{item.address.cityName}} {{item.address.countyName}} {{item.address.detailInfo}}
  				</view>
  			</view>
  			<view class='solids-top align-right flex'>
  				<button class='cu-btn bg-blue lg' wx:if="{{item.state=='待接单'}}" bindtap='orderPick' data-pos='{{index}}'>我要接单</button>
  				<button class='cu-btn bg-green lg' wx:elif="{{item.state=='待执行'}}" bindtap='orderWorkdone' data-pos='{{index}}'>我已完成安装</button>
  			</view>
  		</view>
  	</view>
  </scroll-view>
